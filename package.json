{
  "name": "@plus99/cronx",
  "version": "1.0.0",
  "private": true,
  "description": "Reliable and extensible cron scheduler for Node.js with retries, persistence, and distributed support.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=packages/core",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "example": "node example-runner.js",
    "example:basic": "tsx examples/basic.ts",
    "example:sqlite": "tsx examples/sqlite-example.ts",
    "example:cluster": "tsx examples/clustering.ts",
    "example:redis": "tsx examples/redis-basic.ts",
    "example:redis-cluster": "tsx examples/redis-clustering.ts",
    "example:redis-performance": "tsx examples/redis-performance.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
