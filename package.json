{
  "name": "@plus99/cronx",
  "version": "1.0.2",
  "private": true,
  "description": "Reliable and extensible cron scheduler for Node.js with retries, persistence, and distributed support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/plus-99/cronx.git"
  },
  "homepage": "https://github.com/plus-99/cronx",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=packages/core",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "release": "scripts/release.sh",
    "release:dry-run": "scripts/release.sh --dry-run",
    "example": "node example-runner.js",
    "example:basic": "tsx examples/basic.ts",
    "example:sqlite": "tsx examples/sqlite-example.ts",
    "example:cluster": "tsx examples/clustering.ts",
    "example:redis": "tsx examples/redis-basic.ts",
    "example:redis-cluster": "tsx examples/redis-clustering.ts",
    "example:redis-performance": "tsx examples/redis-performance.ts",
    "ui": "npm run dev --workspace=packages/ui",
    "ui:build": "npm run build --workspace=packages/ui"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
